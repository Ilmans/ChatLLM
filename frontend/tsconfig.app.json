{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["vite/client", "vite-plugin-pwa/vue"],
    "baseUrl": ".",
    "paths": {
      "@acme/counter": ["libs/counter/src/index.ts"],
      "@mlc-ai/web-llm": ["libs/web-llm/src/index.ts"],
      "@/*": ["src/*"]
    },
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.vue",
    "src/**/*.test.vue"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.vue"]
}
